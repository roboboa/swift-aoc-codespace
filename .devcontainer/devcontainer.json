{
  "name": "Swift Development Environment",
  "image": "swift:6.2",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "swift",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "swiftlang.swift-vscode",
        "vadimcn.vscode-lldb",
        "ms-vscode.cmake-tools",
        "vknabel.vscode-swiftlint"
      ],
      "settings": {
        "lldb.library": "/usr/lib/liblldb.so",
        "swiftlint.path": "${workspaceFolder}/.build/release/swiftlint",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true
      }
    }
  },
  "postCreateCommand": "git config --global core.editor 'code --wait' && code --disable-extension vknabel.vscode-swiftlint",
  "remoteUser": "swift"
}
